<p id="notice"><%= notice %></p>

<p>
  <strong>Class:</strong>
  <%= @course.classname %>
</p>

<p>
  <strong>Semester:</strong>
  <%= @course.semester %>
</p>

<p>
  <strong>Year:</strong>
  <%= @course.year %>
</p>

<br></br>
<h2> Students: </h2>
<br></br>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Notes</th>
      <th>Uin</th>
      <th>Final Grade</th>
      <th>Updated Grade</th>
      <th>Recletter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.where(classname: @course.classname).find_each do |student| %>
      <tr>
        <td><%= student.email %></td>
        <td><%= student.firstname %></td>
        <td><%= student.lastname %></td>
        <td><%= student.notes %></td>
        <td><%= student.uin %></td>
        <td><%= student.finalgrade %></td>
        <td><%= student.updatedgrade %></td>
        <td><%= student.recletter %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br></br>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
